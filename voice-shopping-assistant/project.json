    "speech-recognition",
    "nlp",
    "artificial-intelligence",
    "web-app",
    "react",
    "flask",
    "google-cloud"
  ],
  "structure": {
    "backend": {
      "language": "Python",
      "framework": "Flask",
      "port": 5000,
      "key_files": [
        "run.py",
        "app/__init__.py",
        "app/nlp_processor.py",
        "app/voice_processor.py",
        "app/suggestions.py",
        "app/database.py"
      ]
    },
    "frontend": {
      "language": "JavaScript",
      "framework": "React 18",
      "build_tool": "Vite",
      "port": 3000,
      "key_files": [
        "src/App.jsx",
        "src/main.jsx",
        "src/api.js",
        "src/components/VoiceInput.jsx",
        "src/components/ShoppingList.jsx",
        "src/components/Suggestions.jsx"
      ]
    }
  },
  "features": [
    "Voice command recognition",
    "Natural language processing",
    "Multilingual support (9+ languages)",
    "Smart product recommendations",
    "Seasonal item suggestions",
    "Alternative product recommendations",
    "Shopping list categorization",
    "Quantity and unit recognition",
    "Purchase history tracking",
    "Minimalist responsive UI"
  ],
  "tech_stack": {
    "backend": [
      "Flask",
      "Google Cloud Speech-to-Text API",
      "spaCy & NLTK",
      "SQLite/Cloud SQL",
      "Flask-CORS"
    ],
    "frontend": [
      "React 18",
      "Vite",
      "Axios",
      "CSS3"
    ],
    "devops": [
      "Docker",
      "Google Cloud Run",
      "Cloud SQL",
      "GitHub Actions"
    ]
  },
  "quick_start": {
    "setup": "Run setup.sh (Linux/Mac) or setup.bat (Windows)",
    "backend": "cd backend && python run.py",
    "frontend": "cd frontend && npm run dev",
    "docker": "docker-compose up",
    "verify": "python verify_setup.py"
  },
  "deployment": {
    "local": "Docker Compose",
    "cloud": "Google Cloud Run",
    "database": "SQLite (local) or Cloud SQL (production)"
  },
  "documentation": {
    "README": "Full documentation and API reference",
    "QUICKSTART": "5-minute setup guide",
    "APPROACH": "Technical architecture and design decisions",
    "DEPLOYMENT": "Cloud deployment instructions",
    "DEV_GUIDE": "Development guide and extending features",
    "CONTRIBUTING": "How to contribute to the project"
  },
  "api_endpoints": {
    "shopping": [
      "GET /api/shopping/list",
      "POST /api/shopping/add",
      "DELETE /api/shopping/{id}",
      "PUT /api/shopping/{id}/complete"
    ],
    "voice": [
      "POST /api/voice/process",
      "POST /api/voice/transcribe",
      "GET /api/voice/languages"
    ],
    "suggestions": [
      "GET /api/suggestions/",
      "GET /api/suggestions/history"
    ]
  },
  "environment": {
    "backend": [
      "FLASK_ENV",
      "GOOGLE_CLOUD_CREDENTIALS",
      "DATABASE"
    ],
    "frontend": [
      "VITE_API_URL"
    ]
  },
  "requirements": {
    "python": "3.8+",
    "nodejs": "16+",
    "docker": "optional",
    "google_cloud": "optional (for voice API)"
  },
  "testing": {
    "backend": "pytest (unit tests)",
    "frontend": "manual testing",
    "integration": "verify_setup.py"
  },
