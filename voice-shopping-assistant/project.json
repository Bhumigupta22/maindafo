{
  "name": "Voice Shopping Assistant",
  "version": "1.0.0",
  "description": "Voice-based shopping list manager with AI-powered smart suggestions",
  "repository": "https://github.com/your-username/voice-shopping-assistant",
  "license": "MIT",
